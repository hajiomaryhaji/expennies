{% extends "components/layout.html.twig" %}

{% block title %}Expennies | User Registration
{% endblock %}

{% block content %}
	<div class="flex flex-col h-full justify-center items-center">
		<h2 class="text-4xl mb-5 font-extrabold text-blue-700">Register</h2>
		<form method="POST" action="{{ url_for('register') }}" class="w-full flex flex-col max-w-sm px-5">
			{% include "components/csrfFields.html.twig" %}

			<div class="mb-5">
				<label for="name" class="{{ errors.name ? 'is-invalid-label' : 'text-gray-900 dark:text-white' }} block mb-2 text-sm font-medium">Your name</label>
				<input type="text" name="name" id="name" value="{{ old.name }}" class="{{ errors.name ? 'is-invalid-input' : 'bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' }} text-sm rounded-lg block w-full p-2.5" placeholder="Test User" required/>
				<strong class="text-red-500 text-xs mt-4">{{ errors.name | first }}</strong>
			</div>
			<div class="mb-5">
				<label for="email" class="{{ errors.email ? 'is-invalid-label' : 'text-gray-900 dark:text-white' }} block mb-2 text-sm font-medium">Your email address</label>
				<input type="email" name="email" id="email" value="{{ old.email }}" class="{{ errors.email ? 'is-invalid-input' : 'bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' }} text-sm rounded-lg block w-full p-2.5" placeholder="name@example.com" required/>
				<strong class="text-red-500 text-xs mt-4">{{ errors.email | first }}</strong>
			</div>
			<div class="mb-5">
				<label for="password" class="{{ errors.password ? 'is-invalid-label' : 'text-gray-900 dark:text-white' }} block mb-2 text-sm font-medium">Your password</label>
				<input type="password" name="password" id="password" class="{{ errors.password ? 'is-invalid-input' : 'bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' }} text-sm rounded-lg block w-full p-2.5" required/>
				<strong class="text-red-500 text-xs mt-4">{{ errors.password | first }}</strong>
			</div>
			<div class="mb-5">
				<label for="confirm password" class="{{ errors.passwordConfirmation ? 'is-invalid-label' : 'text-gray-900 dark:text-white' }} block mb-2 text-sm font-medium">Confirm your password</label>
				<input type="password" name="passwordConfirmation" id="password-confirmation" class="{{ errors.passwordConfirmation ? 'is-invalid-input' : 'bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' }} text-sm rounded-lg block w-full p-2.5" required/>
				<strong class="text-red-500 text-xs mt-4">{{ errors.passwordConfirmation | first }}</strong>
			</div>
			<button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Register</button>
			<div class="flex justify-center mt-5">
				<p>Have an account?
					<a href="{{ url_for('sign-in') }}" class="underline underline-offset-4 text-blue-600">Sign In</a>
				</p>
			</div>
		</form>
	</div>
{% endblock %}
